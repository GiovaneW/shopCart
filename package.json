{
  "name": "shop_cart",
  "version": "1.0.0",
  "description": "Carrinho de compras par ecomerce",
  "main": "index.js",
  "scripts": {
    "dev": "tsnd ./src/server.ts",
    "build": "npm run clean && npm run lint && npm run build-ts && npm run copy-back && npm run copy-front",
    "lint": "eslint --ext .jsx,.js,.ts src/",
    "clean": "rimraf build",
    "build-ts": "tsc",
    "copy-back": "copyfiles -s \"assets/*\" -f \"build/assets/\"",
    "copy-front": "npm run copy-pages && npm run copy-fonts && npm run copy-styles",
    "copy-pages": "copyfiles -s -f \"src/views/pages/*.ejs\" \"build/views/pages\"",
    "copy-fonts": "copyfiles -s -f \"src/public/fonts/\" \"build/public/fonts\"",
    "copy-styles": "copyfiles -s -f \"src/public/styles/*.css\" \"build/public/styles\"",
    "docker-db": "docker run --env-file ./.env.test --name container-banco-shopcart -p 5432:5432 -d postgres:15-alpine",
    "delete-docker-db": "docker rm -f container-banco-shopcart",
    "docker-local-db": "docker run --env-file ./.env.test --name container-banco-shopcart -p 5432:5432 -d postgres:15-alpine",
    "create-db": "npx sequelize-cli db:create",
    "migrations": "npx sequelize-cli db:migrate",
    "seeds": "npx sequelize-cli db:seed:all",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GiovaneW/shopCart.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GiovaneW/shopCart/issues"
  },
  "homepage": "https://github.com/GiovaneW/shopCart#readme",
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cls-hooked": "^4.3.3",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^8.26.0",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.5.2",
    "sequelize-typescript": "^2.1.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "date-fns": "^2.29.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.25.3",
    "uuid": "^9.0.0"
  }
}
